<% provide(:title,"New User")%>
<div style="margin: 90px;" >  </div>
       <%= form_for :user, url: 'create_user' do |f| %>
        <div class="row">
            <%= f.label :email, class: "col-12 col-sm-4 col-md-4 col-lg-3 col-xl-3" %>
            <%= f.email_field :email, class: "form-control col-12 col-sm-8 col-md-8 col-lg-8 col-xl-8 " %>
        </div>
        <div class="row mt-2 ">
            <%= f.label :number, class: "col-12 col-sm-4 col-md-4 col-lg-3 col-xl-3" %>
            <%= f.number_field :number, class: "form-control col-12 col-sm-8 col-md-8 col-lg-8 col-xl-8 " %>
        </div>
        <div class="row mt-2">
            <%= f.label :password , class: "col-12 col-sm-4 col-md-4 col-lg-3 col-xl-3" %>
            <%= f.password_field :password, class: "form-control col-12 col-sm-8 col-md-8 col-lg-8 col-xl-8 " %>
        </div>
        <div class="row mt-2 ">
            <div class="col-0 col-sm-8 col-md-8 col-lg-9 col-xl-9" ></div>
            <%= f.submit "Submit" ,class:"form-control col-12 col-sm-4 col-md-4 col-lg-2 col-xl-2 btn btn-success " %>
        </div>
    <% end %>